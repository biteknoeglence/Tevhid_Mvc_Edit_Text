@model EntityLayer.Concrete.Subject

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Konu Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("AddSubject", "Subject", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("KonuAdı")
        @Html.TextBoxFor(x=>x.SubjectName)
        @Html.ValidationMessageFor(x=>x.SubjectName)
        <br /><br />
        @Html.Label("Açıklama yazınız")
        @Html.TextBoxFor(x=>x.SubjectDescription)
        @Html.ValidationMessageFor(x=>x.SubjectDescription)
        <br /><br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}

